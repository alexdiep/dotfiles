! "Borrowed" from https://github.com/savoca/dotfiles/blob/gray/home/.Xdefaults

! Font settings
Xft.dpi: 96
Xft.antialias: true
Xft.rgba: rgb
Xft.hinting: hintsight
Xft.lcdfilter: lcddefault

! URxvt Font
Urxvt.fontSpace: -2
URxvt.font: xft:Terminus:pixelsize=11

! URxvt looks
URxvt*scrollBar: false
URxvt*cursorBlink: true
URxvt*internalBorder: 16

! URxvt Enable Link Support
URxvt.perl-ext-common: default,matcher,clipboard
URxvt.url-launcher: midori
URxvt.matcher.button: 1

! URxvt Shortcuts
URxvt.keysym.M-c:   perl:clipboard:copy
URxvt.keysym.M-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.clipboard.copycmd:  xclip -i -selection clipboard
URxvt.clipboard.pastecmd: xclip -o -selection clipboard


! Colors
! #include ".Xresources.d/colors/default"
#include ".Xresources.d/colors/solarized"
