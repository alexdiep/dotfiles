source ~/.mutt/muttrc

set from = "$my_user_work@gmail.com"
set hostname = "gmail.com"

set imap_user = "$my_user_work@gmail.com"
set imap_pass = $my_pass_work

set smtp_url = "smtp://$my_user_work@smtp.gmail.com:587/"
set smtp_pass = $my_pass_work

set realname = "$my_name"
set folder = "imaps://imap.gmail.com:993"
set spoolfile = "+INBOX"
set record = "+[Gmail]/Sent Mail"
set postponed = "+[Gmail]/Drafts"
